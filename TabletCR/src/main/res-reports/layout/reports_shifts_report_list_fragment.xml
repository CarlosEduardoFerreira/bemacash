<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_list_bg"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ItemList.HeaderLayout.1280"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reports_shifts_report_header_date"
                android:layout_weight="1"/>

            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reports_shifts_report_header_register_number"
                android:layout_weight="1"/>

            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reports_shifts_report_header_employee_name"
                android:layout_weight="3"/>

            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reports_shifts_report_header_start_time"
                android:layout_weight="1"/>

            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reports_shifts_report_header_end_time"
                android:layout_weight="1"/>


            <TextView
                style="@style/ItemList.HeaderText.Center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reports_shifts_report_header_time_spent"/>

        </LinearLayout>


        <ListView
            android:id="@android:id/list"
            style="@style/SwipeList.List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider"/>


    </LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_list_padding_left">

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>


        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3"/>

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>


        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>

