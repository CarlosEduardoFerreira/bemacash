<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/reports_fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <View
        android:id="@+id/top_items_fragment_shadow"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/fade_color"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/top_items_fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/reports_details_header_height"
        android:visibility="gone">

        <!--android:name="com.kaching123.tcr.fragment.reports.TopItemsFragment_"-->
        <FrameLayout
            android:id="@+id/top_items_fragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </FrameLayout>
</FrameLayout>
