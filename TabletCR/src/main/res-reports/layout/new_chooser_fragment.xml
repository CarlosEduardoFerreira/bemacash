<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/chooser_second_radio_button"
            style="@style/StyledDialog.RadioGroup.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:id="@+id/register_spinner_label"
            style="@style/Reports.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:minWidth="58dp"
            android:text="Register" />

        <Spinner
            android:id="@+id/register_spinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/from_label"
            style="@style/Reports.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/reports_from_label" />

        <EditText
            android:id="@+id/from_edit"
            style="@style/Reports.DateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/from_label"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/to_label"
            style="@style/Reports.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/from_edit"
            android:paddingLeft="11dp"
            android:text="@string/reports_to_label" />

        <EditText
            android:id="@+id/to_edit"
            style="@style/Reports.DateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/to_label"
            android:layout_below="@id/to_label" />

        <TextView
            android:id="@+id/chooser_dialog_msg"
            style="@style/ModifiersEditDialog.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>


    <RadioButton
        android:id="@+id/chooser_first_radio_button"
        style="@style/StyledDialog.RadioGroup.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

