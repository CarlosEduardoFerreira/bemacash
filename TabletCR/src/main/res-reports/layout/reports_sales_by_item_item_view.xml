<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    style="@style/ItemList.ItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/description"
        style="@style/SaleReport.ItemList.ItemText"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/sale_report_ean_code"
        style="@style/SaleReport.ItemList.ItemText"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        />

    <TextView
        android:id="@+id/sale_report_product_code"
        android:visibility="gone"
        style="@style/SaleReport.ItemList.ItemText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        />

    <TextView
        android:id="@+id/qty"
        style="@style/SaleReport.ItemList.ItemText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        />

    <!--<TextView
        android:id="@+id/item_units"
        style="@style/ItemList.ItemText.Highlightable.Sub"
        android:paddingLeft="4dp"
        android:gravity="center_vertical"
        android:layout_width="35dp"
        android:maxLength="3"
        android:ellipsize="none"
        android:layout_height="match_parent"/>-->

    <TextView
        android:id="@+id/price"
        style="@style/SaleReport.ItemList.ItemText"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        />

</LinearLayout>
