<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_grey_color">

    <LinearLayout
        android:id="@+id/header"
        style="@style/ItemList.HeaderLayout.1280"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            style="@style/ItemList.HeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/report_item_manual_movement_header_date"
            android:layout_weight="1"/>

        <TextView
            style="@style/ItemList.HeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/report_item_manual_movement_header_item"
            android:gravity="center"
            android:layout_weight="4"/>


        <TextView
            style="@style/ItemList.HeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/report_item_manual_movement_header_qty"/>

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/SwipeList.List"
        android:layout_below="@id/header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:divider="?android:attr/listDivider"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_list_padding_left">

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>


        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"/>

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>