<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/total_panel"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_list_padding_left">

        <TextView
            style="@style/SaleReport.ItemList.Total"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="@string/report_details_total" />

        <TextView
            android:id="@+id/total"
            style="@style/SaleReport.ItemList.Total"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/total_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey_color"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ItemList.HeaderLayout.1280"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                style="@style/ItemList.HeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/report_sales_by_drops_and_payments_header_date"
                android:layout_weight="3" />

            <TextView
                style="@style/ItemList.HeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/report_sales_by_drops_and_payments_header_type"
                android:layout_weight="3" />

            <TextView
                style="@style/ItemList.HeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/report_sales_by_drops_and_payments_header_comment"
                android:layout_weight="5" />

            <TextView
                style="@style/ItemList.HeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/report_sales_by_drops_and_payments_header_amount" />

        </LinearLayout>


        <ListView
            android:id="@android:id/list"
            style="@style/SwipeList.List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider" />


    </LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_list_padding_left">

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5" />

        <View
            style="@style/ItemList.HeaderSpace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>

