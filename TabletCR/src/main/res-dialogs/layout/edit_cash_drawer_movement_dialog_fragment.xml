<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <com.kaching123.tcr.component.CustomSwitch
        android:id="@+id/movement_type_switch"
        android:switchTextAppearance="@style/SwitchTextAppearance2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:isChecked="true"
        app:backgroundDrawable="@drawable/switch_drops_track"
        app:switchDrawable="@drawable/btn_toggle_drops"
        app:textLeft="@string/switch_payout"
        app:textRight="@string/switch_drop" />

    <com.kaching123.tcr.component.CustomEditBox
        style="@style/CustomEditBox.Decimal.CashdrawerMovements"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edit_text" />

    <EditText
        android:id="@+id/comment_box"
        style="@style/StyledDialog.Content.EditText"
        android:maxLength="@integer/cash_drawer_movements_comment_length"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cash_drawer_movement_dialog_comment_label" />

</LinearLayout>
