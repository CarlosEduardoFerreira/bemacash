<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/name_edit"
        style="@style/Variant.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/variant_dialog_margin"
        android:layout_marginTop="@dimen/variant_dialog_margin"
        android:hint="@string/variant" />

    <EditText
        android:id="@+id/count_edit"
        style="@style/Variant.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/variant_dialog_margin"
        android:digits="0123456789"
        android:maxLength="3"
        android:hint="@string/variants_count"
        android:inputType="number" />
</LinearLayout>