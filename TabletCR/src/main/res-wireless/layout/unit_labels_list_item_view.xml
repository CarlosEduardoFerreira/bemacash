<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemList.ItemLayout"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/wireless_item_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/units_label_shortcut"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/item_field_padding"
        android:textColor="@drawable/wireless_text_selector"
        android:ellipsize="end"
        android:singleLine="true"
        style="@style/ItemList.ItemText"/>

    <TextView
        android:id="@+id/units_label_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:gravity="center_vertical"
        android:textColor="@drawable/wireless_text_selector"
        android:ellipsize="end"
        android:singleLine="true"
        style="@style/ItemList.ItemText"/>

</LinearLayout>