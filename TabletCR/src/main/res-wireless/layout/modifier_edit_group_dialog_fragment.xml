<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unit_edit_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="5dp"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="15dp">


    <EditText
        android:id="@+id/description"
        style="@style/CustomEditBox.Histry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="@string/modifier_hint"
        android:inputType="text" />

    <TextView
        style="@style/StyledDialog.Content.Label.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/modifier_group_dialog_label"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/condition"
            style="@style/StyledDialog.Content.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/condition_value"
            style="@style/CustomEditBox.Histry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>