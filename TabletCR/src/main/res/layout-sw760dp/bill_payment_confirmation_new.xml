<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/prepaid_dialog_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="250dp">

        <TextView
            android:id="@+id/text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prepaid_confirmation_purchase_summary"
            style="@style/Receipt.BodyHeader" />

        <TextView
            android:layout_below="@+id/text"
            android:id="@+id/text2"
            android:layout_width="3500dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="@string/prepaid_wireless_payment_complete_order_data"
            style="@style/Prepaid.body.Text" />

        <LinearLayout
            android:layout_below="@+id/text2"
            android:id="@+id/layout2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/prepaid_wireless_payment_complete_product"
                style="@style/Prepaid.body.Text" />

            <TextView
                android:id="@+id/product_name_display"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Prepaid.body.Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout2"
            android:id="@+id/layout5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                style="@style/Prepaid.body.Text" />

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Prepaid.body.Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout5"
            android:id="@+id/layout6"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/bill_pauments_fee"
                style="@style/Prepaid.body.Text" />

            <TextView
                android:id="@+id/fee_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Prepaid.body.Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout6"
            android:id="@+id/layout4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/prepaid_wireless_payment_complete_order_total_price"
                style="@style/Prepaid.body.Text" />

            <TextView
                android:id="@+id/total_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Prepaid.body.Text" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="480dp"
            style="@style/Prepaid.body.SubmitButton"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:id="@+id/submit"
            android:text="@string/btn_submit" />
    </RelativeLayout>


</RelativeLayout>
