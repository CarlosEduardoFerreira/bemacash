        android:background="@drawable/prepaid_num9" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num_minus"
        android:layout_marginTop="8px"
        android:layout_marginLeft="15px"
        android:background="@drawable/prepaid_numminus" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num_delete_all"
        android:layout_marginTop="8px"
        android:layout_marginLeft="15px"
        android:background="@drawable/numdeleteall" />

</GridLayout>
