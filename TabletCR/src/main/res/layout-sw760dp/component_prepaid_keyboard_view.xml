<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_keyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="vertical"
    android:rowCount="5">

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num1"
        android:layout_marginTop="8px"
        android:background="@drawable/prepaid_num1" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num4"
        android:layout_marginTop="8px"
        android:background="@drawable/prepaid_num4" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num7"
        android:layout_marginTop="8px"
        android:background="@drawable/prepaid_num7" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num0"
        android:layout_marginTop="8px"
        android:background="@drawable/prepaid_num0" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num_delete"
        android:layout_marginTop="8px"
        android:background="@drawable/prepaid_numdelete" />

    <ImageButton
        style="@style/Prepaid.body.Key"
        android:id="@+id/num2"
        android:layout_marginTop="8px"
        android:layout_marginLeft="15px"
        android:background="@drawable/prepaid_num2" />

    <ImageButton
        style="@style/Prepaid.body.Key"
