<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="match_parent">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="16dp"
        android:id="@+id/country_character_grid"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:listSelector="@android:color/transparent"
        android:numColumns="@integer/product_country_grid_columns"
        android:stretchMode="spacingWidth"
        android:horizontalSpacing="@dimen/product_items_grid_spacing"
        android:columnWidth="@dimen/product_country_character_width"
        android:rowHeight="@dimen/product_country_character_height" />

</RelativeLayout>


