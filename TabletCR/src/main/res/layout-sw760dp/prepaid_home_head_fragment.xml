<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prepaid_dialog_white">


    <TextView
        style="@style/Prepaid.Head.Button"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/home_button"
        android:background="@drawable/head_button_frame"
        android:text="@string/prepaid_head_home_button" />


    <LinearLayout
        android:layout_toRightOf="@+id/home_button"
        android:layout_marginLeft="50dp"
        style="@style/Prepaid.Head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_Home"
            android:paddingTop="12dp"
            style="@style/Prepaid.Head.Text.BigText"
            android:text="@string/prepaid_head_home_button" />

        <TextView
            android:id="@+id/head_instruction"
            android:paddingTop="0dp"
            android:layout_marginTop="5dp"
            style="@style/Prepaid.Head.Text.SmallText"
            android:text="@string/prepaid_head_select_your_category" />

    </LinearLayout>

    <ImageView
        style="@style/Prepaid.Head.Text.SmallText"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/back_button_bg"
        android:layout_marginRight="50dp"
        android:id="@+id/back_button"
        android:layout_alignBottom="@+id/home_button" />


</RelativeLayout>
