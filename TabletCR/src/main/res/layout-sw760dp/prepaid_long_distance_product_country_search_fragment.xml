<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prepaid_dialog_white">

    <TextView
        android:id="@+id/most_popular_button"
        android:layout_marginLeft="40dp"
        style="@style/Prepaid.Head.Button.LongDistance"
        android:text="@string/most_popular"
        android:clickable="false" />

    <TextView
        android:id="@+id/country_search_button"
        android:layout_toLeftOf="@+id/view_all_button"
        android:layout_marginRight="520dp"
        style="@style/Prepaid.Head.Button.pressed"
        android:text="@string/country_search"
        android:clickable="false" />


    <TextView
        android:id="@+id/view_all_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        style="@style/Prepaid.Head.Button.LongDistance"
        android:text="@string/view_all"
        android:clickable="false" />


    <ImageView
        android:id="@+id/country_flag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="38dp"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/country_name"
        android:layout_toRightOf="@+id/country_flag"
        style="@style/Prepaid.Head.Button.pressed"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <FrameLayout
        android:layout_below="@+id/view_all_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/coutry_character_grid_view" />

    <FrameLayout
        android:layout_below="@+id/coutry_character_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coutry_search_product_grid_view" />


</RelativeLayout>
