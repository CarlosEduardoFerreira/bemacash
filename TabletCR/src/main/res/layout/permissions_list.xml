<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listPreferredHeaderHeight"
            android:background="@drawable/modifications_activity_list_bg_header" >

        <ImageView
            android:id="@+id/checkbox_all"
            android:src="@drawable/img_checkbox_light"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <TextView
            style="@style/SimpleList.Header.Text"
            android:id="@+id/title"
            android:layout_toRightOf="@id/checkbox_all"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="14dp"
            android:singleLine="true"
            android:layout_centerVertical="true"/>

        <TextView
            style="@style/SimpleList.Header.Text"
            android:id="@+id/title_counter"
            android:layout_toRightOf="@id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@id/header"
        android:fadeScrollbars="false"
        android:listSelector="@android:color/transparent"
        android:background="@drawable/modifications_activity_list_bg"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</RelativeLayout>