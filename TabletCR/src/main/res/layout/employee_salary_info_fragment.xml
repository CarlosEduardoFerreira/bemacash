<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:id="@+id/salary_info_table"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="100dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_hourly_rate_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/hourly_rate"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_overtime_rate_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/overtime_rate"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:layout_width="250dp"
                    android:text="@string/employee_overtime_starts_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/overtime_starts"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:singleLine="true" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="100dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout
                style="@style/EditItem.Table.LabelLayout.Employee"
                android:paddingLeft="0dp">

                <CheckBox
                    android:id="@+id/tips_eligible"
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_tips_eligible_label" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/commissions_eligible_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout
                style="@style/EditItem.Table.LabelLayout.Employee"
                android:paddingLeft="0dp">

                <CheckBox
                    android:id="@+id/commissions_eligible"
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_commissions_eligible_label" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/commissions_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_commissions_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/commissions"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout
                style="@style/EditItem.Table.LabelLayout.Employee"
                android:paddingLeft="0dp">

                <CheckBox
                    android:id="@+id/clock_in_mandatory"
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_clock_in_mandatory_label" />
            </FrameLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>