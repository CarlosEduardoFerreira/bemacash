<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="80dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_email_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/email"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:maxLength="@integer/email_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_phone_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/phone"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:maxLength="@integer/phone_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_street_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/street"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_street_label2" />
            </FrameLayout>

            <EditText
                android:id="@+id/complementary"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="100dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_city_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/city"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_state_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/state"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_country_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/country"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <FrameLayout style="@style/EditItem.Table.LabelLayout.Employee">

                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/employee_zip_label" />
            </FrameLayout>

            <EditText
                android:id="@+id/zip"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>

    </TableLayout>
</LinearLayout>