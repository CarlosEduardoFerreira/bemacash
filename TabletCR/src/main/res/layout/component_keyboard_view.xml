<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_keyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="4" >

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num7"
        android:background="@drawable/num7" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num4"
        android:layout_marginTop="1px"
        android:background="@drawable/num4" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num1"
        android:layout_marginTop="1px"
        android:background="@drawable/num1" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num0"
        android:layout_marginTop="1px"
        android:background="@drawable/num0" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num8"
        android:layout_marginLeft="1px"
        android:background="@drawable/num8" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num5"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/num5" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num2"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/num2" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num_minus"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/numminus" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num9"
        android:layout_marginLeft="1px"
        android:background="@drawable/num9" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num6"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/num6" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num3"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/num3"/>

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num_dot"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:background="@drawable/numdot" />

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num_delete"
        android:layout_marginLeft="1px"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"
        android:background="@drawable/numdelete"/>

    <ImageButton
        style="@style/keyboard"
        android:id="@+id/num_enter"
        android:layout_marginTop="1px"
        android:layout_marginLeft="1px"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"
        android:background="@drawable/numenter"/>

</GridLayout>
