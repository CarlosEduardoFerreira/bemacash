<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="@dimen/action_button_min_width"
    android:minHeight="@dimen/action_button_min_height"
    android:layout_width="@dimen/action_button_min_width"
    android:layout_height="@dimen/action_button_min_height"
    android:background="?android:attr/actionBarItemBackground">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_action_item_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginLeft="32dp"
        android:lines="1"
        android:textSize="11sp"
        android:gravity="center"
        android:background="@drawable/action_bar_badge_bg"
        android:id="@+id/ab_counter"
        android:textColor="@color/action_bar_hold_text_color"
        android:singleLine="true"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
</FrameLayout>
