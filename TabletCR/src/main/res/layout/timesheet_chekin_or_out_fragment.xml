<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <GridLayout
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:columnCount="2"
        android:rowCount="2"
        android:gravity="center"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/clock_in"
            style="@style/LocalizableButton.Gold.Timeshits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:enabled="false"
            android:background="@drawable/timeshit_btn_selector"
            android:text="@string/btn_clock_in" />

        <Button
            android:id="@+id/clock_out"
            style="@style/LocalizableButton.Gold.Timeshits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:enabled="false"
            android:background="@drawable/timeshit_btn_selector"
            android:text="@string/btn_clock_out" />

        <Button
            android:id="@+id/start_break"
            style="@style/LocalizableButton.Gold.Timeshits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:enabled="false"
            android:background="@drawable/timeshit_btn_selector"
            android:text="@string/btn_break_start" />

        <Button
            android:id="@+id/stop_break"
            style="@style/LocalizableButton.Gold.Timeshits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:enabled="false"
            android:background="@drawable/timeshit_btn_selector"
            android:text="@string/btn_break_finish" />

    </GridLayout>

</RelativeLayout>
