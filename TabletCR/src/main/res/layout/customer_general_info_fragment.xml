<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_street" />
            </FrameLayout>

            <EditText
                android:id="@+id/street"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/complementary"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_street2" />
            </FrameLayout>

            <EditText
                android:id="@+id/street2"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/city"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_city" />
            </FrameLayout>

            <EditText
                android:id="@+id/city"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/state"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_state" />
            </FrameLayout>

            <EditText
                android:id="@+id/state"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/country"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_country" />
            </FrameLayout>

            <EditText
                android:id="@+id/country"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/zip"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_zip" />
            </FrameLayout>

            <EditText
                android:id="@+id/zip"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_email" />
            </FrameLayout>

            <EditText
                android:id="@+id/email"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:maxLength="@integer/email_max_length"
                android:nextFocusDown="@+id/phone"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_sex" />
            </FrameLayout>

            <Spinner
                android:id="@+id/sex_spinner"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_identification" />
            </FrameLayout>

            <EditText
                android:id="@+id/identification"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:inputType="number"
                android:maxLength="13"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_consent_promotions" />

            </FrameLayout>

            <CheckBox
                android:id="@+id/consent_promotions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_street" />
            </FrameLayout>

            <EditText
                android:id="@+id/bonus_points"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/complementary"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_street" />
            </FrameLayout>

            <EditText
                android:id="@+id/birthday"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/complementary"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_street" />
            </FrameLayout>

            <EditText
                android:id="@+id/loyalty_barcode"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="@integer/address_max_length"
                android:nextFocusDown="@+id/complementary"
                android:singleLine="true" />
        </TableRow>

        <TableRow>
            <FrameLayout style="@style/EditItem.Table.LabelLayout">
                <TextView
                    style="@style/EditItem.Table.Label"
                    android:text="@string/customer_label_sex" />
            </FrameLayout>

            <Spinner
                android:id="@+id/loyalty_plan"
                style="@style/EditItem.Table.Edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

</LinearLayout>