<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/bar_chart_bar_width"
    android:layout_height="match_parent">

    <TextView android:id="@+id/header_label"
        style="@style/BarChart.Item.HeaderLabel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:background="@drawable/bar_chart_header_label_bg"/>

    <com.kaching123.tcr.component.chart.BarChartView_
        android:id="@+id/bar_chart_view"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/report_view_grey"
        app:bar_background="@drawable/bar_chart_bar_bg"
        />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_gravity="center_horizontal">

        <TextView android:id="@+id/footer_value_label"
            style="@style/BarChart.Item.FooterLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView android:id="@+id/footer_unit_label"
            style="@style/BarChart.Item.FooterUnitLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/footer_value_label"
            android:layout_marginTop="1dp"
            />

    </RelativeLayout>

</LinearLayout>
