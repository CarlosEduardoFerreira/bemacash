<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_bar_chart_bar_height">

    <TextView
        android:id="@+id/footer_value_label"
        style="@style/BarChart.Item.FooterLabel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="-2dp"
        />

    <com.kaching123.tcr.component.chart.HorizontalBarChartView_
        android:id="@+id/bar_chart_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/footer_value_label"
        android:layout_toLeftOf="@+id/header_label"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/bar_chart_bar_bg"
        app:horizontal_bar_background="@drawable/horizontal_bar_chart_bar_bg"
        />

    <TextView
        android:id="@+id/header_label"
        android:layout_height="match_parent"
        android:layout_width="50dp"
        style="@style/BarChart.Item.HeaderLabel"
        android:layout_below="@id/footer_value_label"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:background="@drawable/horizontal_bar_chart_header_label_bg"
        />

</RelativeLayout>
