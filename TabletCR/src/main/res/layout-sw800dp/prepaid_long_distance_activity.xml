<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prepaid_head_height"
        android:id="@+id/long_distance_head" />


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/prepaid_blue_divider"></View>

    <FrameLayout
        android:id="@+id/long_distance_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prepaid_body_height" />


</LinearLayout>
