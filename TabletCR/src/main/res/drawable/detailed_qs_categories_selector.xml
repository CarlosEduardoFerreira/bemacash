<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <stroke android:width="6dp" android:color="@color/detailed_qservice_ui_categories_active" />
                    <solid android:color="@color/detailed_qservice_ui_categories_bg_selected" />
                </shape>
            </item>

            <item android:left="6dp">
                <shape
                    android:shape="rectangle">
                    <stroke android:width="6dp" android:color="@color/detailed_qservice_ui_categories_bg_selected" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@color/detailed_qservice_ui_categories_bg_normal"/>
</selector>
