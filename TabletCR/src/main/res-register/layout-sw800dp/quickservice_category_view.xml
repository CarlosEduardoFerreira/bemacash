<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/quick_category_item_pic_size"
                android:layout_height="@dimen/quick_category_item_pic_size"
                android:background="@drawable/quick_category_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/title">

        <ImageView
            android:id="@+id/image"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/category_image_bg"/>
    </RelativeLayout>

    <TextView
        style="@style/QuickServiceCategory.Title"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/quick_category_item_text_zone_height"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/qs_category_text_padding_bottom"/>

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/quick_category_shadow"/>

</RelativeLayout>
