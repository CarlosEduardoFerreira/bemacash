    android:layout_marginTop="20dp"
    android:layout_below="@+id/text"
    android:layout_alignLeft="@+id/text"
    android:id="@+id/country_flag_grid"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:listSelector="@android:color/transparent"
    android:numColumns="@integer/product_flag_grid_columns"
    android:stretchMode="spacingWidth"
    android:verticalSpacing="@dimen/product_items_grid_spacing"
    android:horizontalSpacing="@dimen/product_items_grid_spacing"
    android:columnWidth="@dimen/product_country_flag_width"
    android:rowHeight="@dimen/product_country_flag_height" />
