<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detailed_qservice_ui_bottom_fragment"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <Button
        android:id="@+id/reserved1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:background="@drawable/reserved_action_btn_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Open Cash Drawer"
        android:textAlignment="center"
        android:textColor="@color/reserved_action_text_color_selector"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reserved2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/reserved_action_btn_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Discount"
        android:textColor="@color/reserved_action_text_color_selector"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reserved3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/reserved_action_btn_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Check"
        android:textColor="@color/reserved_action_text_color_selector"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reserved4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:background="@drawable/reserved_action_btn_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Open Mod"
        android:textColor="@color/reserved_action_text_color_selector"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reserved5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:background="@drawable/reserved_action_btn_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Reserved"
        android:textAlignment="center"
        android:textColor="@color/reserved_action_text_color_selector"
        android:textSize="18sp"
