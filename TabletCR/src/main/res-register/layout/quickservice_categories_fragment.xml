<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/loyal_light_blue"
              >

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingLeft="@dimen/quick_categories_grid_padding"
        android:paddingRight="@dimen/quick_categories_grid_padding"
        android:paddingTop="@dimen/quick_categories_grid_padding"

        android:verticalSpacing="@dimen/quick_category_grid_vertical_spacing"
        android:columnWidth="@dimen/quick_category_item_width"
        android:numColumns="@integer/quick_categories_columns"
        android:stretchMode="spacingWidth"

        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:listSelector="@android:color/transparent" />

</LinearLayout>
