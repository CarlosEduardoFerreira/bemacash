<?xml version="1.0" encoding="utf-8"?>
<GridView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/items_grid"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:listSelector="@android:color/transparent"
    android:numColumns="@integer/quick_grid_items_grid_columns"
    android:paddingLeft="@dimen/quick_items_grid_spacing"
    android:paddingRight="@dimen/quick_items_grid_spacing"
    android:stretchMode="spacingWidth"
    android:verticalSpacing="@dimen/quick_items_grid_spacing"
    android:horizontalSpacing="@dimen/quick_items_grid_spacing"
    android:columnWidth="@dimen/modifier_view_width"
    android:rowHeight="@dimen/modifier_view_height"
    />

