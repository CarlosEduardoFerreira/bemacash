<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemList.ItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/ItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_pick_name"
            style="@style/ItemList.ItemText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/item_pick_ean"
            android:textColor="@color/list_item_text_sub"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_pick_discount"
        style="@style/ItemList.ItemText"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"/>


    <FrameLayout
        style="@style/ItemList"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:maxWidth="90dp">

        <TextView
            android:paddingLeft="@dimen/item_field_padding"
            android:paddingRight="@dimen/item_field_padding"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/item_pick_price"
            style="@style/ItemList.ItemText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            />
    </FrameLayout>

</LinearLayout>
