<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemList.HeaderLayout.1280"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/ItemList.HeaderText"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:gravity="left"
        android:text="@string/modifiers_copy_header_name"/>

    <TextView
        style="@style/ItemList.HeaderText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/modifiers_copy_header_modifiers"/>

    <TextView
        style="@style/ItemList.HeaderText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/modifiers_copy_header_addons"/>

    <TextView
        style="@style/ItemList.HeaderText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/modifiers_copy_header_optionals"/>

</LinearLayout>
