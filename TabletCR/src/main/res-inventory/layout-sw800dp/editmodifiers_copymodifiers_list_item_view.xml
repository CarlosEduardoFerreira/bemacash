<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:minHeight="@dimen/listPreferredItemHeight">

    <LinearLayout
        style="@style/ItemList.ItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/ItemList.ItemText"
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"/>

        <TextView
            style="@style/ItemList.ItemText"
            android:id="@+id/modifiers_cnt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <TextView
            style="@style/ItemList.ItemText"
            android:id="@+id/addons_cnt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <TextView
            style="@style/ItemList.ItemText"
            android:id="@+id/options_cnt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <include layout="@layout/editmodifiers_copymodifiers_search_vertical_dividers"/>

</FrameLayout>

