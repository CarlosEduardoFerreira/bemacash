<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <AutoCompleteTextView
        android:id="@+id/item_chooser"
        style="@style/StyledDialog.Content.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="@string/composer_filter"
        android:imeOptions="actionDone"
        android:inputType="textVisiblePassword" />

    <br.com.bematech.bemacash.component.ItemAutocompleteTextView
        android:id="@+id/item_matrix_chooser"
        style="@style/StyledDialog.Content.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:hint="@string/item_matrix_filter"
        android:imeOptions="actionDone"
        android:inputType="textVisiblePassword" />
</LinearLayout>