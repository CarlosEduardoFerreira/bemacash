<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
    android:background="@drawable/modifications_activity_list_bg_header"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    >

    <TextView
        style="@style/SimpleList.Header.Text"
        android:layout_height="match_parent"
        android:layout_width="@dimen/modifiers_list_name_width"
        android:paddingLeft="@dimen/modifiers_list_name_padding_left"
        android:gravity="center_vertical"
        android:text="Name"/>

    <TextView
        style="@style/SimpleList.Header.Text"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Price"/>

</LinearLayout>

