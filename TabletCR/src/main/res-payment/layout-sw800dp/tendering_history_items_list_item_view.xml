<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemList.ItemLayout"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:checked="true"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="4dp"
        android:id="@+id/checkbox"
        android:button="@drawable/checkbox_light"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <LinearLayout
        android:id="@+id/refund_qty_block"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/qty_refund"
            style="@style/ItemList.ItemText.Highlightable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!--android:layout_weight="1"-->

        <TextView
            android:id="@+id/item_units"
            style="@style/ItemList.ItemText.Highlightable.Sub"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingTop="4dp"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/ItemList.ItemText"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/list_item_text_sub"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/dashboard_opening_amount_value_text"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:gravity="right|center_vertical"
        android:id="@+id/max_refund_qty"
        style="@style/ItemList.ItemText"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>


    <TextView
        android:visibility="gone"
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:gravity="right|center_vertical"
        android:id="@+id/price"
        style="@style/ItemList.ItemText"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:id="@+id/qty"
        style="@style/ItemList.ItemText"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:paddingLeft="@dimen/item_field_padding"
        android:paddingRight="@dimen/item_field_padding"
        android:id="@+id/total"
        style="@style/ItemList.ItemText"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>
