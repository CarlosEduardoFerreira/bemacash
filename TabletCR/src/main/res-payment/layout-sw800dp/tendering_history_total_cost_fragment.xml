<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TotalCostTable.Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subtotal_top_bkg"
        android:orientation="vertical">

        <LinearLayout
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_order_num"/>

            <TextView
                android:id="@+id/num"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subtotal_container"
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_subtotal"/>

            <TextView
                android:id="@+id/subtotal"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="$ 64.40"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tips_container"
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_tips"/>

            <TextView
                android:id="@+id/tips"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_total"/>

            <TextView
                android:id="@+id/total"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_date"/>

            <TextView
                android:id="@+id/date"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="$ 64.40"/>

        </LinearLayout>

        <LinearLayout
            style="@style/TotalCostTable.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/TotalCostTable.Text.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tendering_history_total_cashier"/>

            <TextView
                android:id="@+id/cashier"
                style="@style/TotalCostTable.Text.Main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="$ 64.40"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 	Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/subtotal_divider"/>
    <!-- 	Divider -->

    <!--<padding
        android:left="12dp"
        android:right="12dp"
        android:top="10dp"
        android:bottom="10dp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TotalCostTable.Total.Container">

        <TextView
            style="@style/TotalCostTable.Total.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tendering_history_total_refund"/>

        <TextView
            android:id="@+id/refund_amount"
            style="@style/TotalCostTable.Total.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="$ 70.84"/>
    </LinearLayout>

    <Button
        style="@style/LocalizableButton.Green"
        android:textSize="42sp"
        android:text="@string/button_return"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/refund_btn"/>


    <Button
        style="@style/LocalizableButton.Grey"
        android:textSize="26sp"
        android:layout_marginTop="8dp"
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_email"/>

    <Button
        style="@style/LocalizableButton.Grey"
        android:textSize="26sp"
        android:paddingLeft="22dp"
        android:id="@+id/btn_reprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_reprint"/>

    <Button
        style="@style/LocalizableButton.Grey"
        android:textSize="26sp"
        android:paddingLeft="22dp"
        android:id="@+id/btn_reprint_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_reprint_kitchen"/>


    <Button
        style="@style/LocalizableButton.LightRed"
        android:text="@string/button_add_tips"
        android:textSize="26sp"
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/close_btn"/>

</LinearLayout>