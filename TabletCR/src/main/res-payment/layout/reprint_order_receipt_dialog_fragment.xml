<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <CheckBox
            android:id="@+id/order_receipt_chkbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/peprint_order_receipt_print_order_receipt_chkbx"
            style="@style/CheckBox.Light"/>

        <CheckBox
            android:id="@+id/refund_receipt_chkbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/peprint_order_receipt_print_refund_receipt_chkbx"
            style="@style/CheckBox.Light"/>

    </LinearLayout>

</FrameLayout>