<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              style="@style/Settings.Printers.Item">

    <ImageView
        android:id="@+id/btn_edit"
        android:src="@drawable/btn_edit_permission"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:layout_toLeftOf="@id/btn_edit"
        android:id="@+id/btn_config"
        android:src="@drawable/ic_printer_settings"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_toLeftOf="@id/btn_config"
        android:id="@android:id/text1"
        style="@style/Settings.Printers.Text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAX pinpad device"/>

    <TextView
        android:layout_below="@android:id/text1"
        android:id="@android:id/text2"
        style="@style/Settings.Printers.Text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sub title"/>

</RelativeLayout>