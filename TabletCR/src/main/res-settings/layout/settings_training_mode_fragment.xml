<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp">

    <TextView
        android:layout_marginTop="4dp"
        style="@style/Settings.Fragments.SubTitle"
        android:id="@+id/title_label"
        android:text="@string/pref_training_mode_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/title_label"
        style="@style/Settings.Fragments.SubTitle2"
        android:id="@+id/title_sublabel"
        android:text="@string/pref_training_mode_header_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="9dp"
        android:id="@+id/divider"
        android:layout_below="@id/title_sublabel"
        android:layout_marginBottom="8dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/settings_divider"/>

    <TextView
        android:id="@+id/mode_value"
        android:layout_marginTop="4dp"
        android:layout_below="@id/divider"
        android:layout_alignParentRight="true"
        style="@style/Settings.Fragments.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mode_label"
        android:layout_marginTop="4dp"
        android:layout_below="@id/divider"
        android:layout_toLeftOf="@id/data_value"
        style="@style/Settings.Fragments.SubTitle"
        android:text="@string/training_mode_settings_fragment_current_value_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>