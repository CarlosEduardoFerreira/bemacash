<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <com.kaching123.tcr.component.CustomEditBox
        style="@style/StyledDialog.Content.EditText"
        android:layout_alignParentLeft="true"
        android:inputType="number"
        android:id="@+id/kds_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kds_config_station_hint"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        />

    <Spinner
        style="@style/StyledDialog.Content.Spinner"
        android:id="@+id/alias"
        android:layout_marginTop="12dp"
        android:layout_below="@id/kds_station"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</RelativeLayout>
